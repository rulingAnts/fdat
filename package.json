{
  "name": "flexml_display",
  "version": "2.0.0",
  "description": "FLEx XML Viewer.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev:web": "node .local/dev-server.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win nsis",
    "dist:win:portable": "electron-builder --win portable",
    "dist:win:all": "electron-builder --win nsis portable"
  },
  "author": "",
  "engines": {
    "node": ">=18 <25"
  },
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.rulingants.flexmlviewer",
    "productName": "FLEx XML Viewer",
    "files": [
      "docs/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    }
  }
}
