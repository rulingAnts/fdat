{
  "name": "flexml_display",
  "version": "1.0.2",
  "description": "Electron wrapper for FLEx XML Viewer.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win nsis",
    "dist:win:portable": "electron-builder --win portable",
    "dist:win:all": "electron-builder --win nsis portable",
    "vendor:update": "npm install exceljs@4.3.0 file-saver@2.0.5 && cp node_modules/exceljs/dist/exceljs.min.js docs/vendor/ && cp node_modules/file-saver/dist/FileSaver.min.js docs/vendor/"
  },
  "author": "",
  "engines": {
    "node": "22.20.0"
  },
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.rulingants.flexmlviewer",
    "productName": "FLEx XML Viewer",
    "files": [
      "docs/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    }
  }
}
