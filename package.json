{
  "name": "flexml_display",
  "version": "2.0.0",
  "description": "FLEx XML Viewer.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev:web": "node .local/dev-server.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win nsis",
    "dist:win:portable": "electron-builder --win portable",
    "dist:win:all": "electron-builder --win nsis portable",
    "icons": "node scripts/gen-icons.mjs",
    "dist:mac": "npm run icons && electron-builder --mac dmg",
    "dist:all": "npm run icons && electron-builder -mwl"
  },
  "author": "",
  "engines": {
    "node": ">=18 <25"
  },
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "to-ico": "^1.1.5",
    "sharp": "^0.34.4"
  },
  "build": {
    "appId": "com.rulingants.flexmlviewer",
    "productName": "FLEx XML Viewer",
    "files": [
      "docs/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    }
  }
}
